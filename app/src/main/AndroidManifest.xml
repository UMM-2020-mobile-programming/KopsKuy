<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.adamnain.kopskuy">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/food"
        android:label="Kopskuy"
        android:roundIcon="@drawable/food"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="io.github.adamnain.kopskuy.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="io.github.adamnain.kopskuy.LoginActivity" />
        <activity android:name="io.github.adamnain.kopskuy.DashboardActivity" />
        <activity android:name="io.github.adamnain.kopskuy.ListMenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="io.github.adamnain.kopskuy.DetailMenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="io.github.adamnain.kopskuy.KonfirmasiPesananActivity" />
        <activity
            android:name="io.github.adamnain.kopskuy.MainActivity"
            android:label="Kopskuy"
            android:theme="@style/AppTheme.NoActionBar" />
<!--        <activity android:name=".RegisterActivity"></activity>-->
    </application>

</manifest>